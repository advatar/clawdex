{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "outputPath": {"type": "string"},
    "taskRunId": {"type": "string"},
    "title": {"type": "string"},
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "heading": {"type": "string"},
          "level": {"type": "number"},
          "paragraphs": {"type": "array", "items": {"type": "string"}},
          "bullets": {"type": "array", "items": {"type": "string"}}
        },
        "additionalProperties": true
      }
    }
  },
  "required": ["outputPath"],
  "additionalProperties": true
}
