{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "outputPath": {"type": "string"},
    "taskRunId": {"type": "string"},
    "title": {"type": "string"},
    "slides": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "bullets": {
            "type": "array",
            "items": {"type": "string"}
          },
          "notes": {"type": "string"}
        },
        "required": ["title"],
        "additionalProperties": true
      }
    }
  },
  "required": ["outputPath", "slides"],
  "additionalProperties": true
}
