{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "cellValue": {
      "oneOf": [
        {"type": "string"},
        {"type": "number"},
        {"type": "boolean"},
        {"type": "null"},
        {"type": "object"}
      ]
    }
  },
  "properties": {
    "outputPath": {"type": "string"},
    "taskRunId": {"type": "string"},
    "title": {"type": "string"},
    "sheets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "cells": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "row": {"type": "number"},
                "col": {"type": "number"},
                "value": {"$ref": "#/definitions/cellValue"},
                "formula": {"type": "string"}
              },
              "required": ["row", "col"],
              "additionalProperties": true
            }
          },
          "rows": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {"$ref": "#/definitions/cellValue"}
            }
          },
          "columns": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "col": {"type": "number"},
                "width": {"type": "number"}
              },
              "required": ["col", "width"],
              "additionalProperties": true
            }
          }
        },
        "required": ["name"],
        "additionalProperties": true
      }
    }
  },
  "required": ["outputPath", "sheets"],
  "additionalProperties": true
}
