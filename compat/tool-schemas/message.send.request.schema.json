{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "channel": {"type": "string"},
    "to": {"type": "string"},
    "text": {"type": "string"},
    "message": {"type": "string"},
    "attachments": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "object"}
    },
    "mediaUrl": {"type": "string", "minLength": 1},
    "mediaUrls": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string", "minLength": 1}
    },
    "accountId": {"type": "string"},
    "threadId": {"type": "string"},
    "sessionKey": {"type": "string"},
    "bestEffort": {"type": "boolean"},
    "dryRun": {"type": "boolean"},
    "idempotencyKey": {"type": "string"},
    "idempotency_key": {"type": "string"}
  },
  "required": ["channel", "to"],
  "anyOf": [
    {"required": ["text"]},
    {"required": ["message"]},
    {"required": ["attachments"]},
    {"required": ["mediaUrl"]},
    {"required": ["mediaUrls"]}
  ],
  "additionalProperties": false
}
